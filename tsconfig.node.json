{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/docs/.vitepress/config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@renderer/*": ["src/renderer/*"],
      "@preload/*": ["src/preload/*"],
      "@docs/*": ["src/docs/*"],
      "@main/*": ["src/main/*"],
      "@src/*": ["src/*"],
      "@resources/*": ["resources/*"],
      "@root/*": ["./*"]
    }
  }
}
