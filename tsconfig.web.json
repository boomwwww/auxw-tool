{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": ["src/renderer/src/env.d.ts", "src/renderer/src/**/*", "src/renderer/src/**/*.vue"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@renderer/*": ["src/renderer/*"],
      "@preload/*": ["src/preload/*"],
      "@docs/*": ["src/docs/*"],
      "@main/*": ["src/main/*"],
      "@src/*": ["src/*"],
      "@resources/*": ["resources/*"],
      "@root/*": ["./*"]
    }
  }
}
